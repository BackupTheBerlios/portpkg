#!/bin/sh
if ! html2text -help >/dev/null; then
  echo "No package 'html2text installed!"
  exit 1
fi

for doc in QuickStart UserGuide MaintainerGuide PortpkgGuide TodoBugsAbout; do
  wget -O $doc.html http://portpkg.berlios.de/doc.php?page=$doc
  html2text -nobs -style pretty -o $doc.txt $doc.html
done
