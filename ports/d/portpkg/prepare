#!/bin/sh
if ! [ -x /usr/bin/elinks ]; then
  echo "No package 'elinks' installed!"
  exit 1
fi

for doc in FrontPage QuickStart UserGuide MaintainerGuide PortpkgGuide \
AutoportGuide TodoBugsAbout QuestionsAndAnswers Links; do
  wget -O $doc.html http://portpkg.berlios.de/doc.php?page=$doc
  elinks -no-numbering -dump $doc.html >README.$doc
  rm $doc.html
done

mv README{.TodoBugsAbout,}
mv README.FrontPage NEWS
sed -i "0,12d" NEWS
