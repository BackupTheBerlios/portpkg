#!/bin/bash -u
#
# Sync documentation with portpkg.berlios.de wiki.
# Do this before releasing a new portpkg
# FOR PORTPKG ADMINISTRATION ONLY

. `which portpkg` || exit 1

has_prog elinks || die

stanza "Syncing docs:"
for doc in NEWS INSTALL README ABOUT FAQ README.Links ROADMAP; do
  row "$doc"
  rm $doc
  wget -O $doc.html http://portpkg.berlios.de/doc.php?page=$doc
  elinks -no-numbering -dump $doc.html | grep -v "^[ ]*EditThisPage" >$doc
  rm $doc.html
  sed -i "/ file:\/\//d" $doc
done
