TMP=${TMP:-/tmp}
CWD=`pwd`
NAME=`basename $CWD`
PKG=$TMP/package-$NAME

VERSION=2.8.0.1
ARCH=i686
BUILD=2tom

rm -rf $PKG
mkdir -p $PKG/usr
cd $TMP
tar xjvf $CWD/$NAME-$VERSION.tar.bz2
cd $NAME-$VERSION
chown -R root.root .
#=config
./configure \
  --prefix=/usr \
  --sysconfdir=/etc/X11 \
  --localstatedir=/var/lib \
  --program-prefix="" \
  --disable-static \
  $ARCH-slackware-linux || exit 1
#=config
make
make install DESTDIR=$PKG
#+install
mv $PKG/etc/X11/gdm/gdm.conf{,.new}
mkdir -p $PKG/usr/share/faces

mkdir -p $PKG/etc/X11/dm/Sessions 
cp -a $CWD/*.desktop $PKG/etc/X11/dm/Sessions
chmod 755 $PKG/etc/X11/dm/Sessions/*

cp -a $CWD/Xsession $PKG/etc/X11/gdm
chmod 755 $PKG/etc/X11/Xsession

chown -R gdm.gdm $PKG/var/lib/gdm
chmod 750 $PKG/var/lib/gdm

mkdir -p $PKG/var/log/gdm
rm -rf $PKG/var/lib/log/gdm
( cd $PKG/var/lib/log/gdm 
  ln -sf ../../log/gdm .
)
( cd $PKG/usr/share/applications
  for i in gdmsetup; do
    sed -i '/^Exec=/s/=/=gnomesu /' $i.desktop
  done
)

# make it work with rc.4
ln -s /usr/sbin/gdm /usr/bin/gdm
#+install
rm -rfv $PKG/var/lib/scrollkeeper
rm -rfv $PKG/usr/info/dir
chown -R root.bin $PKG/usr/bin $PKG/usr/sbin || true
( cd $PKG
  find . | xargs file | grep "executable" | grep ELF | cut -d : -f 1 | xargs -r strip --strip-unneeded
  find . | xargs file | grep "shared object" | grep ELF | cut -d : -f 1 | xargs -r strip --strip-unneeded
  find . | xargs file | grep "current ar archive" | cut -d : -f 1 | xargs -r strip --strip-debug
)
mv $PKG/usr/share/man $PKG/usr/share/doc $PKG/usr/ || true
gzip -9 $PKG/usr/info/* $PKG/usr/man/man?/* $PKG/usr/man/*/man?/* || true
mkdir -p $PKG/usr/doc/$NAME-$VERSION
cp -a \
  AUTHORS COPYING ChangeLog INSTALL NEWS README README.install TODO \
  $PKG/usr/doc/$NAME-$VERSION/
find $PKG/usr/doc -type f -exec chmod 644 {} \;
find $PKG/usr/doc -type d -exec chmod 755 {} \;
mkdir -p $PKG/install
cat $CWD/slack-desc >$PKG/install/slack-desc
cat $CWD/doinst.sh >$PKG/install/doinst.sh

cd $PKG
makepkg -p -l y -c n $TMP/$NAME-$VERSION-$ARCH-$BUILD.tgz

if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/$NAME-$VERSION
  rm -rf $PKG
fi
