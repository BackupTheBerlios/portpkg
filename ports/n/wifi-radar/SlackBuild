TMP=${TMP:-/tmp}
CWD=`pwd`
NAME=`basename $CWD`
PKG=$TMP/package-$NAME

VERSION=1.9.4
ARCH=${ARCH:-i486}
BUILD=1tom

rm -rf $PKG
mkdir -p $PKG/usr
cd $TMP
tar xzvf $CWD/wifi-radar-$VERSION.tar.gz
cd wifi-radar-$VERSION
chown -R root.root .
#=install
mkdir -p $PKG/usr/bin 
cp -a \
    wifi-radar \
    $PKG/usr/bin
mkdir -p $PKG/usr/share/{pixmaps,applications}
cp -a \
    wifi-radar.png wifi-radar.svg \
    $PKG/usr/share/pixmaps
cp -a \
    $CWD/wifi-radar.desktop \
    $PKG/usr/share/applications
mkdir -p $PKG/etc 
cp -a \
    wifi-radar.conf \
    $PKG/etc/wifi-radar.conf.new
#=install
#+install
 sed -i "s/etc\/conf.d\//etc\//" $PKG/usr/bin/wifi-radar
 chmod 755 $PKG/usr/bin/wifi-radar    
#+install
rm -rfv $PKG/usr/info/dir
chown -R root.bin $PKG/usr/bin $PKG/usr/sbin || true
( cd $PKG
  find . | xargs file | grep "executable" | grep ELF | cut -d : -f 1 | xargs -r strip --strip-unneeded
  find . | xargs file | grep "shared object" | grep ELF | cut -d : -f 1 | xargs -r strip --strip-unneeded
  find . | xargs file | grep "current ar archive" | cut -d : -f 1 | xargs -r strip --strip-debug
)
mv $PKG/usr/share/man $PKG/usr/share/doc $PKG/usr/ || true
gzip -9 $PKG/usr/info/* $PKG/usr/man/man?/* $PKG/usr/man/*/man?/* || true
mkdir -p $PKG/usr/doc/$NAME-$VERSION
cp -a \
  AUTHORS COPYING ChangeLog INSTALL README TODO \
  $PKG/usr/doc/$NAME-$VERSION/
find $PKG/usr/doc -type f -exec chmod 644 {} \;
find $PKG/usr/doc -type d -exec chmod 755 {} \;
mkdir -p $PKG/install
cat $CWD/slack-desc >$PKG/install/slack-desc
cat $CWD/doinst.sh >$PKG/install/doinst.sh

cd $PKG
makepkg -p -l y -c n $TMP/$NAME-$VERSION-$ARCH-$BUILD.tgz

if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/wifi-radar-$VERSION
  rm -rf $PKG
fi
