# this is a wrapper around the original build-script from
# Slackware-current, since on current-systems this is already
# installed, portpkg won't use it

NAME=gst-plugins
VERSION=0.8.5
ARCH=i486
BUILD=1

# we need to remove any other packages before checkinstall
# runs a installpkg on it

removepkg $NAME

checkinstall -S -y \
  --pkgname=$NAME \
  --pkgversion=$VERSION \
  --pkgarch=$ARCH \
  --pkgrelease=$BUILD \
  --pakdir=/tmp \
  --strip=yes \
  --stripso=yes \
  --gzman=yes \
  --backup=no \
  "sh gst-plugins.build" || exit 1
