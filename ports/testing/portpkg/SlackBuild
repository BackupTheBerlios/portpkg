CWD=`pwd`
NAME=`basename $CWD`
TMP=${TMP:-/tmp}
PKG=$TMP/package-$NAME
rm -rf $PKG

VERSION=0.38test12
ARCH=noarch
BUILD=1tom

# directories
mkdir -p $PKG/etc/portpkg/plugins
mkdir -p $PKG/usr/bin
mkdir -p $PKG/usr/man/man1
mkdir -p $PKG/var/log/portpkg
mkdir -p $PKG/var/log/setup

# configuration
install -m 644 $CWD/mirrors.new $PKG/etc/portpkg/
install -m 644 $CWD/ignore.new $PKG/etc/portpkg/
install -m 644 $CWD/exclude.new $PKG/etc/portpkg/
install -m 644 $CWD/use.new $PKG/etc/portpkg/
install -m 644 $CWD/export.* $PKG/etc/portpkg/plugins/
install -m 644 $CWD/sync.* $PKG/etc/portpkg/plugins/

# man page
install -m 644 $CWD/portpkg.1 $PKG/usr/man/man1/

# executables
install -m 755 $CWD/portpkg $PKG/usr/bin/
sed -i -r "s,^(ENGINE_VER=).*$,\1$VERSION," $PKG/usr/bin/portpkg
install -m 755 $CWD/pp-config $PKG/usr/bin/
install -m 755 $CWD/checkpkg $PKG/usr/bin/
install -m 755 $CWD/autoport $PKG/usr/bin/

# integrate pp-config into pkgtool
ln -s /usr/bin/pp-config $PKG/var/log/setup/setup.portpkg

chown -R root.bin $PKG/usr/bin
gzip -9 $PKG/usr/man/man?/*
mkdir -p $PKG/usr/doc/$NAME-$VERSION
cp -a \
  COPYING CREDITS NEWS README* \
  $PKG/usr/doc/$NAME-$VERSION/
mkdir -p $PKG/install
cat $CWD/slack-desc >$PKG/install/slack-desc
cat $CWD/doinst.sh >$PKG/install/doinst.sh

cd $PKG
makepkg -p -l y -c n $TMP/$NAME-$VERSION-$ARCH-$BUILD.tgz
