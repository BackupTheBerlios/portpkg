#!/bin/sh
#
# messagebus:   The D-BUS systemwide message bus
#
# chkconfig: 345 97 03
# description:  This is a daemon which broadcasts notifications of system events \
#               and other messages. See http://www.freedesktop.org/software/dbus/
#
# processname: dbus-daemon-1
#

# Sanity checks.
[ -x /usr/bin/dbus-daemon ] || exit 0

RETVAL=0


start() {
PID=`pidof dbus-daemon`
  echo "Starting system message bus:  dbus-daemon --system"
  if [ $PID ]; then 
    echo "DBUS already running (pid $PID) " ;
    exit;
  
  else 
    rm -f /var/run/dbus/dbus.pid  
    /usr/bin/dbus-daemon --system
  fi;
  RETVAL=$?
  
}

stop() {
  echo "Stopping system message bus..."
  killall -TERM dbus-daemon 2>/dev/null || echo "dbus-daemon was probably not running."
   
}

# See how we were called.
case "$1" in
  start)
    start;;
  stop)
    stop;;
  restart)
    stop
    sleep 1
    start;;
  *)
    echo $"Usage: $0 {start|stop|restart}";;
esac
exit $RETVAL
