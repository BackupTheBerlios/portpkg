VERSION=1.0pre6
ARCH=${ARCH:-i486}
BUILD=4tom

TMP=${TMP:-/tmp}
CWD=`pwd`
NAME=`basename $CWD`
PKG=$TMP/package-$NAME
rm -rf $PKG
mkdir -p $PKG/{install,usr/doc/$NAME-$VERSION}

cd $TMP || exit 1
tar xjvf $CWD/MPlayer-$VERSION.tar.bz2 || exit 1
cd MPlayer-$VERSION || exit 1
chown -R root.root .

case $ARCH in
  i386|i486)   OPTIMISE="--enable-runtime-cpudetection";;
  s390|x86_64) OPTIMISE="--enable-runtime-cpudetection";;
  *86)         OPTIMISE="--disable-runtime-cpudetection";;
esac

CFLAGS= \
./configure \
  --prefix=/usr \
  --confdir=/etc \
  --enable-gui \
  --enable-dynamic-plugins \
  --enable-menu \
  $OPTIMISE || exit 1
make install DESTDIR=$PKG || exit 1
# use our .desktop entry and pixmap
mkdir -p $PKG/usr/share/{applications,pixmaps}
cp $CWD/gmplayer.desktop $PKG/usr/share/applications/
cp $CWD/MPlayer_mini.xpm $PKG/usr/share/pixmaps/
# install a skin
tar xjvf $CWD/Blue-1.4.tar.bz2 -C $PKG/usr/share/mplayer/Skin/
chown -R root.root $PKG/usr/share/mplayer/Skin
cp -a \
  AUTHORS ChangeLog LICENSE README \
  $PKG/usr/doc/$NAME-$VERSION/

cd $PKG || exit 1
cat $CWD/slack-desc >$PKG/install/slack-desc
find -type d | grep -e /bin$ -e /sbin$ | xargs -r chown -R root.bin
find -type d | grep /doc/ | xargs -r chmod 755
find -type f | grep /doc/ | xargs -r chmod 644
find -type f | xargs file | grep ELF | cut -d : -f 1 | xargs -r strip --strip-unneeded
find -type f | grep -e /man/ -e /info/ | xargs -r gzip -9
makepkg -p -l y -c n $TMP/$NAME-$VERSION-$ARCH-$BUILD.tgz
