TMP=${TMP:-/tmp}
CWD=`pwd`
NAME=`basename $CWD`
PKG=$TMP/package-$NAME

VERSION=1.0pre7try2
ARCH=${ARCH:-i486}
BUILD=1hnaz

#=slkcflags
if [ "$ARCH" = "i386" ]; then
  OPT="--enable-runtime-cpudetection"
elif [ "$ARCH" = "i486" ]; then
  OPT="--enable-runtime-cpudetection"
elif [ "$ARCH" = "s390" ]; then
  OPT="--enable-runtime-cpudetection"
elif [ "$ARCH" = "x86_64" ]; then
  OPT="--enable-runtime-cpudetection"
else
  OPT="--disable-runtime-cpudetection"
fi

#=slkcflags
rm -rf $PKG
mkdir -p $PKG/usr
cd $TMP
tar xjvf $CWD/MPlayer-$VERSION.tar.bz2
cd MPlayer-$VERSION
chown -R root.root .
#=configure
CFLAGS="" \
./configure \
  --prefix=/usr \
  --confdir=/etc \
  --enable-gui \
  --enable-dynamic-plugins \
  --enable-menu \
  $OPT
#=configure
#=install
make
make install DESTDIR=$PKG
#=install
rm -rfv $PKG/usr/info/dir
chown -R root.bin $PKG/usr/bin || true
( cd $PKG
  find . | xargs file | grep "executable" | grep ELF | cut -d : -f 1 | xargs -r strip --strip-unneeded
  find . | xargs file | grep "shared object" | grep ELF | cut -d : -f 1 | xargs -r strip --strip-unneeded
  find . | xargs file | grep "current ar archive" | cut -d : -f 1 | xargs -r strip --strip-debug
)
# Fix mencoder.1 issue (hnaz)
( cd $PKG/usr/man/man1; rm mencoder.1; ln -sf mplayer.1.gz mencoder.1.gz )
gzip -9 $PKG/usr/man/man?/*.? || true
mkdir -p $PKG/usr/doc/$NAME-$VERSION
cp -a \
  AUTHORS ChangeLog LICENSE README \
  $PKG/usr/doc/$NAME-$VERSION/
find $PKG/usr/doc -type f -exec chmod 644 {} \;
find $PKG/usr/doc -type d -exec chmod 755 {} \;
# this is empty..? kill it
rmdir $PKG/etc || true
mkdir -p $PKG/install
cat $CWD/slack-desc >$PKG/install/slack-desc
cat $CWD/doinst.sh >$PKG/install/doinst.sh

cd $PKG
makepkg -p -l y -c n $TMP/$NAME-$VERSION-$ARCH-$BUILD.tgz

if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/MPlayer-$VERSION
  rm -rf $PKG
fi
