VERSION=1.0pre6
ARCH=${ARCH:-i486}
BUILD=1tom

CWD=`pwd`
NAME=`basename $CWD`
PKG=/tmp/package-$NAME
rm -rf $PKG
mkdir -p $PKG/usr

if [ "$ARCH" = "i386" ]; then
  SLKCFLAGS="-O2 -march=i386 -mcpu=i686"
elif [ "$ARCH" = "i486" ]; then
  SLKCFLAGS="-O2 -march=i486 -mcpu=i686"
elif [ "$ARCH" = "s390" ]; then
  SLKCFLAGS="-O2"
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2"
fi

cd /tmp || exit 1
tar xjvf $CWD/MPlayer-$VERSION.tar.bz2 || exit 1
cd MPlayer-$VERSION || exit 1
chown -R root.root .
CFLAGS= \
./configure \
  --prefix=/usr \
  --confdir=/etc \
  --enable-gui \
  --enable-dynamic-plugins \
  --enable-menu \
  --enable-runtime-cpudetection \
  --disable-smb || exit 1
make || exit 1
make install DESTDIR=$PKG || exit 1
## use our .desktop entry and pixmap
#mkdir -p $PKG/usr/share/{applications,pixmaps}
#cp $CWD/gmplayer.desktop $PKG/usr/share/applications/
#cp $CWD/MPlayer_mini.xpm $PKG/usr/share/pixmaps/
# install a skin
tar xjvf $CWD/Blue-1.4.tar.bz2 -C $PKG/usr/share/mplayer/Skin/
chown -R root.root $PKG/usr/share/mplayer/Skin

chown -R root.bin $PKG{,/usr}/{,s}bin 2>/dev/null
( cd $PKG
  find . | xargs file | grep "executable" | grep ELF | cut -f 1 -d : | xargs strip --strip-unneeded 2>/dev/null
  find . | xargs file | grep "shared object" | grep ELF | cut -f 1 -d : | xargs strip --strip-unneeded 2>/dev/null
)
gzip -9 $PKG/usr/man/man?/*
mkdir -p $PKG/usr/doc/$NAME-$VERSION
cp -a \
  AUTHORS ChangeLog LICENSE README \
  $PKG/usr/doc/$NAME-$VERSION
mkdir -p $PKG/install
cat $CWD/slack-desc >$PKG/install/slack-desc

cd $PKG || exit 1
makepkg -p -l y -c n /tmp/$NAME-$VERSION-$ARCH-$BUILD.tgz
