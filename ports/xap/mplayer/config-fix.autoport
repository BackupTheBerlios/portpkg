
case $ARCH in
  i386,i486)   OPTIMISATION="--enable-runtime-cpudetection";;
  s390,x86_64) OPTIMISATION="--enable-runtime-cpudetection";;
  *86)         OPTIMISATION="--disable-runtime-cpudetection";;
esac

CFLAGS= \
./configure \
  --prefix=/usr \
  --confdir=/etc \
  --enable-gui \
  --enable-dynamic-plugins \
  --enable-menu \
  $OPTIMISATION || exit 1
