VERSION=1.5.2
ARCH=i486
BUILD=1lem

CWD=`pwd`
NAME=`basename $CWD`
PKG=/tmp/package-$NAME
rm -rf $PKG
mkdir -p $PKG/usr

cd /tmp || exit 1
tar xzvf $CWD/$NAME-$VERSION.tar.gz || exit 1
cd $NAME-$VERSION || exit 1
chown -R root.root .
python setup.py build install --root=$PKG || exit 1
chown -R root.bin $PKG{,/usr}/{,s}bin 2>/dev/null
gzip -9 $PKG/usr/man/man?/*

mkdir -p $PKG/usr/doc/$NAME-$VERSION
cp -a \
  BUGS COPYING ChangeLog FAQ INSTALL README TODO Docs/plugins \
  Docs/plugin_writing Docs/distribution Docs/installation \
  $PKG/usr/doc/$NAME-$VERSION

mkdir -p $PKG/usr/share/freevo
cp -a \
    freevo_config.py local_conf.py.example contrib \
    $PKG/usr/share/freevo

mkdir -p $PKG/install
cat $CWD/slack-desc >$PKG/install/slack-desc

cd $PKG || exit 1
makepkg -p -l y -c n /tmp/$NAME-$VERSION-$ARCH-$BUILD.tgz
