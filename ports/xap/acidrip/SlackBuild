TMP=${TMP:-/tmp}
CWD=`pwd`
NAME=`basename $CWD`
PKG=$TMP/package-$NAME

VERSION=0.14
ARCH=noarch
BUILD=4tom

rm -rf $PKG
mkdir -p $PKG/usr
cd $TMP
tar xzvf $CWD/$NAME-$VERSION.tar.gz
cd $NAME-$VERSION
chown -R root.root .
perl Makefile.PL
make
make install DESTDIR=$PKG
#+install
mkdir -p $PKG/usr/share/applications
install -m 644 $CWD/acidrip.desktop $PKG/usr/share/applications/
logo=`find $PKG/usr/lib/perl5/site_perl/ -name logo.png | sed "s,^$PKG,,"`
echo "Icon=$logo" >>$PKG/usr/share/applications/acidrip.desktop
#+install
rm -rfv $PKG/usr/lib/perl?/?.?.?/*-linux/perllocal.pod
rm -rfv $PKG/usr/info/dir
chown -R root.bin $PKG/usr/bin $PKG/usr/sbin || true
mv $PKG/usr/share/man $PKG/usr/share/doc $PKG/usr/ || true
gzip -9 $PKG/usr/info/* $PKG/usr/man/man?/* $PKG/usr/man/*/man?/* || true
mkdir -p $PKG/usr/doc/$NAME-$VERSION
cp -a \
  CHANGELOG COPYING MANIFEST TODO \
  $PKG/usr/doc/$NAME-$VERSION/
find $PKG/usr/doc -type f -exec chmod 644 {} \;
find $PKG/usr/doc -type d -exec chmod 755 {} \;
mkdir -p $PKG/install
cat $CWD/slack-desc >$PKG/install/slack-desc
cat $CWD/doinst.sh >$PKG/install/doinst.sh

cd $PKG
makepkg -p -l y -c n $TMP/$NAME-$VERSION-$ARCH-$BUILD.tgz

if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/$NAME-$VERSION
  rm -rf $PKG
fi
