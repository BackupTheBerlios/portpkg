TMP=${TMP:-/tmp}
CWD=`pwd`
NAME=`basename $CWD`
PKG=$TMP/package-$NAME

VERSION=1.0.4
ARCH=${ARCH:-i486}
BUILD=1sjn

if [ "$ARCH" = "i386" ]; then
  SLKCFLAGS="-O2 -march=i386 -mcpu=i686"
elif [ "$ARCH" = "i486" ]; then
  SLKCFLAGS="-O2 -march=i486 -mcpu=i686"
elif [ "$ARCH" = "s390" ]; then
  SLKCFLAGS="-O2"
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2"
fi

rm -rf $PKG $TMP/$NAME-$VERSION
mkdir -p $PKG/usr
cd $TMP || exit 1
tar xjvf $CWD/$NAME-$VERSION.tar.bz2 || exit 1
cd $NAME-$VERSION || exit 1
zcat $CWD/sylpheed-claws-gettext.patch.gz | patch -p1 || exit 1

chown -R root.root .
CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
./configure \
  --prefix=/usr \
  --enable-ldap \
  --enable-ipv6 \
  --enable-spamassassin-plugin \
  --enable-gpgme \
  --enable-openssl \
  --enable-aspell \
  --target=$ARCH-slackware-linux \
  $ARCH-slackware-linux || exit 1
make || exit 1
make install DESTDIR=$PKG \
faqdir=$DESTDIR/usr/doc/$NAME-$VERSION/faq \
manualdir=$DESTDIR/usr/doc/$NAME-$VERSION/manual || exit 1
find $PKG/ -type d -name bin -o -name sbin | xargs -r chown -R root.bin
( cd $PKG
  find . | xargs file | grep "executable" | grep ELF | cut -d : -f 1 | xargs -r strip --strip-unneeded 
  find . | xargs file | grep "shared object" | grep ELF | cut -d : -f 1 | xargs -r strip --strip-unneeded
  find . | xargs file | grep "current ar archive" | cut -f 1 -d : | xargs strip --strip-debug
)
mkdir -p $PKG/usr/doc/$NAME-$VERSION
cp -a \
  ABOUT-NLS AUTHORS ChangeLog COPYING NEWS READM* RELEASE_NOTES.claws TODO \
  $PKG/usr/doc/$NAME-$VERSION/
find $PKG/usr/doc -type f | xargs -r chmod 644
find $PKG/usr/doc -type d | xargs -r chmod 755
find $PKG/usr/share/{man,doc} -maxdepth 0 | xargs -r -i mv {} $PKG/usr/
find $PKG/usr/info -name dir | xargs -r rm
find $PKG/usr/{man,info} -type f | xargs -r gzip -9
mkdir -p $PKG/install
cat $CWD/slack-desc >$PKG/install/slack-desc
cat $CWD/doinst.sh >$PKG/install/doinst.sh

mkdir $PKG/usr/share/{applications,pixmaps}
cat sylpheed.desktop | sed 's/sylpheed.png/\/usr\/share\/pixmaps\/sylpheed.png/' > $PKG/usr/share/applications/sylpheed.desktop
cat sylpheed.png > $PKG/usr/share/pixmaps/sylpheed.png

cd $PKG || exit 1
mv usr/bin/$ARCH-slackware-linux-sylpheed usr/bin/sylpheed

makepkg -p -l y -c n $TMP/$NAME-$VERSION-$ARCH-$BUILD.tgz
