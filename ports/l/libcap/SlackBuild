VERSION=1.10
ARCH=${ARCH:-i486}
BUILD=2tom

CWD=`pwd`
NAME=`basename $CWD`
PKG=/tmp/package-$NAME
rm -rf $PKG
mkdir -p $PKG/usr

cd /tmp || exit 1
tar xzvf $CWD/$NAME-$VERSION.tar.gz
cd $NAME-$VERSION || exit 1
chown -R root.root .
make || exit 1
make install prefix=/usr FAKEROOT=$PKG || exit 1
chown -R root.bin $PKG{,/usr}/{,s}bin
find $PKG/ | xargs file | grep ELF | cut -f 1 -d : | xargs strip --strip-unneeded
mv $PKG/usr/share/{man,doc} $PKG/usr/
rmdir $PKG/usr/share
gzip -9 $PKG/usr/man/man?/*
mkdir -p $PKG/usr/doc/$NAME-$VERSION
cp -a \
  CHANGELOG License README doc \
  $PKG/usr/doc/$NAME-$VERSION
mkdir -p $PKG/install
cat $CWD/slack-desc >$PKG/install/slack-desc

cd $PKG || exit 1
makepkg -p -l y -c n /tmp/$NAME-$VERSION-$ARCH-$BUILD.tgz
