VERSION=7.0r25
ARCH=i386
BUILD=1tom

CWD=`pwd`
NAME=`basename $CWD`
PKG=/tmp/package-$NAME
rm -rf $PKG
mkdir -p $PKG/{install,usr/{doc/$NAME-$VERSION,lib/netscape/plugins}}

cd /tmp || exit 1
tar xzvf $CWD/install_flash_player_7_linux.tar.gz
cd install_flash_player_7_linux || exit 1
chown -R root.root .
mv *.xpt *.so $PKG/usr/lib/netscape/plugins/
cp -a \
  Readme.* \
  $PKG/usr/doc/$NAME-$VERSION

cd $PKG || exit 1
cat $CWD/slack-desc >install/slack-desc
find | xargs file | grep ELF | cut -f 1 -d : | xargs strip --strip-unneeded
makepkg -p -l y -c n /tmp/$NAME-$VERSION-$ARCH-$BUILD.tgz
