VERSION=20050115
ARCH=i386
BUILD=1tom

CWD=`pwd`
NAME=`basename $CWD`
PKG=/tmp/package-$NAME
rm -rf $PKG
mkdir -p $PKG/usr

cd /tmp || exit 1
tar xjvf $CWD/essential-$VERSION.tar.bz2
cd essential-$VERSION || exit 1
chown -R root.root .

mkdir -p $PKG/usr/lib/win32
install -m 644 * $PKG/usr/lib/win32/

chown -R root.bin $PKG{,/usr}/{,s}bin
mkdir -p $PKG/install
cat $CWD/slack-desc >$PKG/install/slack-desc

cd $PKG || exit 1
makepkg -p -l y -c n /tmp/$NAME-$VERSION-$ARCH-$BUILD.tgz
