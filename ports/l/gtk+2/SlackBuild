#!/bin/sh
# MAINTAINER: T. Pfaff 'tom' <topf@users.berlios.de>
# SOURCES: ftp://ftp.gtk.org/pub/gtk/v2.10/gtk+-2.10.2.tar.bz2
# MD5SUMS: 9039804dfd115e40a70a6ba096f418a2 gtk+-2.10.2.tar.bz2
# MD5SUMS: bdd3b950e4a3c65d61bceed9149888a9 gtk+-2.8.12.tar.bz2
# MD5SUMS: 1a03dbed4b794194a610e9d7eb175b06 gtk+-2.8.19.tar.bz2
# REQUIRES: atk cairo expat glib2 libjpeg libpixman libpng libtiff pango x11 x11-devel zlib
# OPTIONAL: cups gtk-doc linuxdoc-tools sgml-tools

TMP=${TMP:-/tmp}
CWD=`pwd`
NAME=`basename $CWD`
PKG=$TMP/package-$NAME

VERSION=2.10.2
ARCH=${ARCH:-i486}
BUILD=1tom

if [ "$ARCH" = "i386" ]; then
  SLKCFLAGS="-O2 -march=i386 -mcpu=i686"
elif [ "$ARCH" = "i486" ]; then
  SLKCFLAGS="-O2 -march=i486 -mcpu=i686"
elif [ "$ARCH" = "s390" ]; then
  SLKCFLAGS="-O2"
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2"
fi

rm -rf $PKG
mkdir -p $PKG/usr
cd $TMP
tar xjvf $CWD/gtk+-$VERSION.tar.bz2
cd gtk+-$VERSION
chown -R root.root .
CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
./configure \
  --prefix=/usr \
  --sysconfdir=/etc \
  --localstatedir=/var/lib \
  --program-prefix="" \
  --disable-static \
  --with-x-input\
  --with-png \
  $ARCH-slackware-linux
make
make install DESTDIR=$PKG
mkdir -p $PKG/etc/gtk-2.0 $PKG/etc/profile.d
install -m 755 $CWD/profile.d/gtk+.sh $PKG/etc/profile.d/
install -m 755 $CWD/profile.d/gtk+.csh $PKG/etc/profile.d/
rm -fv $PKG/usr/info/dir
( cd $PKG
  find . | xargs file | grep "executable" | grep ELF | cut -d : -f 1 | xargs -r strip --strip-unneeded
  find . | xargs file | grep "shared object" | grep ELF | cut -d : -f 1 | xargs -r strip --strip-unneeded
  find . | xargs file | grep "current ar archive" | cut -f 1 -d : | xargs -r strip --strip-debug
)
mv $PKG/usr/share/man $PKG/usr/share/doc $PKG/usr/share/info $PKG/usr/ || true
mkdir -p $PKG/usr/doc/$NAME-$VERSION
cp -a \
  AUTHORS COPYING ChangeLog HACKING INSTALL NEWS README README.cvs-commits README.win32 \
  $PKG/usr/doc/$NAME-$VERSION/
find $PKG/usr/doc -type f | xargs -r chmod 644
find $PKG/usr/doc -type d | xargs -r chmod 755
find $PKG/usr/man $PKG/usr/info -type f | xargs -r gzip -9
mkdir -p $PKG/install
cat $CWD/slack-desc >$PKG/install/slack-desc
cat $CWD/doinst.sh >$PKG/install/doinst.sh

cd $PKG
makepkg -p -l y -c n $TMP/$NAME-`echo $VERSION | tr - _`-$ARCH-$BUILD.tgz

if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/gtk+-$VERSION
  rm -rf $PKG
fi
