TMP=${TMP:-/tmp}
CWD=`pwd`
NAME=`basename $CWD`
PKG=$TMP/package-$NAME

VERSION=1.0
ARCH=noarch
BUILD=1lem

rm -rf $PKG
mkdir -p $PKG/usr/bin
cd $TMP || exit 1

cp $CWD/tv_grab_cz $PKG/usr/bin/
chmod 755 $PKG/usr/bin/tv_grab_cz

mkdir -p $PKG/install
cat $CWD/slack-desc >$PKG/install/slack-desc

cd $PKG || exit 1
makepkg -p -l y -c n $TMP/$NAME-$VERSION-$ARCH-$BUILD.tgz

if [ "$1" = "--cleanup" ]; then
  rm -rf $PKG
fi

