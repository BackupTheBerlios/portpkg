VERSION=2.4.8
ARCH=${ARCH:-i486}
BUILD=2tom

CWD=`pwd`
NAME=`basename $CWD`
PKG=/tmp/package-$NAME
rm -rf $PKG
mkdir -p $PKG/usr

cd /tmp || exit 1
tar xjvf $CWD/$NAME-$VERSION.tar.bz2 || exit 1
cd $NAME-$VERSION || exit 1
chown -R root.root .
./autogen.sh || exit 1
./configure \
  --prefix=/usr \
  --sysconfdir=/etc \
  --localstatedir=/var/lib \
  --program-prefix="" \
  --disable-static \
  $ARCH-slackware-linux || exit 1
make || exit 1
make install DESTDIR=$PKG || exit 1
chown -R root.bin $PKG{,/usr}/{,s}bin 2>/dev/null
( cd $PKG
  find . | xargs file | grep "executable" | grep ELF | cut -f 1 -d : | xargs strip --strip-unneeded 2>/dev/null
  find . | xargs file | grep "shared object" | grep ELF | cut -f 1 -d : | xargs strip --strip-unneeded 2>/dev/null
)
gzip -9 $PKG/usr/man/man?/*
mkdir -p $PKG/install
mkdir -p $PKG/usr/doc/$NAME-$VERSION
mv $PKG/usr/share/doc/*/* $PKG/usr/doc/$NAME-$VERSION/
rm -rf $PKG/usr/share/doc
cp -a \
  AUTHORS CHANGES COPYING ChangeLog INSTALL NEWS PORTING README README.SUN README.win32 \
  $PKG/usr/doc/$NAME-$VERSION
cat $CWD/slack-desc >$PKG/install/slack-desc

cd $PKG || exit 1
makepkg -p -l y -c n /tmp/$NAME-$VERSION-$ARCH-$BUILD.tgz
